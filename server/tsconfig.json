{
	"compilerOptions": {
		"lib": ["es2020"],
		"target": "es2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"types": ["node"],
		"rootDirs": ["src"],
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"exclude": ["temp"]
}
